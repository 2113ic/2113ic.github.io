---
import Layout from '../layouts/layout.astro'
import CONFIG from '../config'
import '../styles/index.scss'

// Components
import ToggleTheme from '../components/toggle-theme.vue'
import FindMe from '../components/find-me.vue'
import ShowProjects from '../components/show-projects.vue'
import ShowBlogs from '../components/show-blogs.vue'
---

<Layout>
  <ToggleTheme client:only="vue" />
  <header>
    <h1 class="greeting">{CONFIG.name}</h1>
    <div class="info">{CONFIG.info}</div>
    <FindMe />
  </header>

  <main>
    <ShowProjects />
    <ShowBlogs />
  </main>
</Layout>

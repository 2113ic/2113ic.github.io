---
import ToggleTheme from '@/components/toolbar/ToggleTheme.vue'
import SearchBox   from '@/components/toolbar/SearchBox.vue'
import BackBtn     from '@/components/toolbar/BackBtn.vue'

const { back, search } = Astro.props
---

<div class="tool-bar">
  { back   && <BackBtn client:only /> }
  { search && <SearchBox client:only /> }
  { !back  && !search && <span></span> }
  <ToggleTheme client:only />
</div>

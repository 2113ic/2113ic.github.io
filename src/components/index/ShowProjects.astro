---
import HeadLine from './HeadLine.astro'
import config from '@/config'

const { projects } = config
---

<div class="projects">
  {projects!.length !== 0 && <HeadLine>Projects</HeadLine>}

  <div class="content">
    {
      projects!.map((project) => {
        return (
          <a class="project" href={project.url} target="_blank">
            <div class="icon" set:html={project.icon} />
            <div class="info">
              <div class="title">{project.title}</div>
              <div class="summary">{project.summary}</div>
            </div>
          </a>
        )
      })
    }
  </div>
</div>

<style lang="scss">
  .icon {
    width: 36px;
    height: 36px;
    margin-right: 12px;
    font-size: 0;
  }

  .title {
    line-height: 28px;
  }

  .summary {
    color: var(--font-subtitle-color);
    font-size: 0.875rem;
  }

  .content {
    display: grid;
    grid-gap: 1rem;
    gap: 1rem;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    margin-bottom: 24px;

    .project {
      display: flex;
      align-items: center;
      padding: 16px;
      border-radius: 8px;
      background-color: var(--bg-card-color);
      transition: background-color 0.3s;

      &:hover {
        background-color: var(--hover-color-1);
      }
    }
  }

  @media (min-width: 640px) {
    .content {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
</style>

{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@api/*": ["src/api/*"],
      "@config": ["src/config.ts"],
      "@asset/*": ["src/assets/*"],
      "@comp/*": ["src/components/*"],
      "@page/*": ["src/pages/*"],
      "@style/*": ["src/styles/*"],
      "@util/*": ["src/utils/*"],
      "@type/*": ["src/types/*"],
      "@content/*": ["src/content/*"],
      "@layout/*": ["src/layouts/*"]
    },
    "jsx": "preserve"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.astro",
    "./src/**/*.vue"
  ]
}